@SET CFN structure.xyz


&GLOBAL                  ! section to select the kind of calculation
   RUN_TYPE GEO_OPT   
   PRINT_LEVEL LOW
   PROJECT cp2k_mm_energy.inp
&END GLOBAL
&FORCE_EVAL              ! section with parameters and system description
  METHOD FIST            ! Molecular Mechanics method
  &MM                    ! specification of MM parameters 
    &FORCEFIELD          ! parameters needed to describe the potential 
    &SPLINE
    EMAX_SPLINE 10000    ! numeric parameter to ensure calculation stability. Should not be changed
    &END
      &NONBONDED       ! parameters for the non bonded interactions
        &LENNARD-JONES ! Lennard-Jones parameters
          atoms Cu Cu
          EPSILON    [K_e] 164.56
          SIGMA [angstrom]   2.601
          RCUT  [angstrom]  10.0
        &END LENNARD-JONES
        &LENNARD-JONES ! Lennard-Jones parameters
          atoms Pt Pt
          EPSILON    [K_e] 164.56
          SIGMA [angstrom]   2.601
          RCUT  [angstrom]  10.0
        &END LENNARD-JONES
        &LENNARD-JONES ! Lennard-Jones parameters
          atoms H H
          EPSILON    [K_e] 14.56
          SIGMA [angstrom]   0.301
          RCUT  [angstrom]  3.0
        &END LENNARD-JONES
        &LENNARD-JONES ! Lennard-Jones parameters
          atoms H Pt
          EPSILON    [K_e] 54.56
          SIGMA [angstrom]   1.101
          RCUT  [angstrom]  4.0
        &END LENNARD-JONES
        &LENNARD-JONES ! Lennard-Jones parameters
          atoms H Cu
          EPSILON    [K_e] 54.56
          SIGMA [angstrom]   1.101
          RCUT  [angstrom]  4.0
        &END LENNARD-JONES
      &END NONBONDED
      &CHARGE
        ATOM Cu
        CHARGE 0.0
      &END CHARGE
      &CHARGE
        ATOM Pt
        CHARGE 0.0
      &END CHARGE
      &CHARGE
        ATOM H
        CHARGE 0.0
      &END CHARGE
    &END FORCEFIELD
    &POISSON              ! solver for non periodic calculations
     PERIODIC NONE
      &EWALD
        EWALD_TYPE none
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS                 ! system description 
    &CELL
     PERIODIC NONE
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME ${CFN}
      &CENTER_COORDINATES T
      &END CENTER_COORDINATES
    &END TOPOLOGY
   &END SUBSYS
&END FORCE_EVAL
&MOTION
  &GEO_OPT
    TYPE MINIMIZATION
    MAX_ITER 1000
    OPTIMIZER BFGS
  &END GEO_OPT

&END MOTION
