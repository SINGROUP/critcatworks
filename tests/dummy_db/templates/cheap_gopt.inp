############ General ############################
@SET COORD_FILE coverage_structure.xyz 
@SET SYSTEM cheap_gopt
@SET CELLSIZE 25.0 25.0 25.0 

#&EXT_RESTART
#  RESTART_FILE_NAME ${SYSTEM}-1.restart
#&END EXT_RESTART


&GLOBAL
  RUN_TYPE GEO_OPT           # ENERGY_FORCE, GEO_OPT
  PREFERRED_FFT_LIBRARY FFTSG
  EXTENDED_FFT_LENGTHS
  PRINT_LEVEL MEDIUM            
  PROJECT ${SYSTEM}          # Name of calculation 
&END GLOBAL

##################################################
 
&FORCE_EVAL
  METHOD QuickStep
  &PRINT
    &FORCES
      FILENAME forces
      &EACH 
       MD 1
      &END EACH
    &END FORCES
  &END PRINT
  &DFT                      
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL

    UKS
#    CHARGE 0

    &MGRID
      CUTOFF 300             # plane-wave cutoff for the charge density [Rydbergs]
      NGRIDS 4
      REL_CUTOFF 30
    &END MGRID  
# Periodic poisson solver as a trick to speed up calculation
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER WAVELET
    &END POISSON
    &QS
      METHOD GPW                        
      EPS_DEFAULT 1.0E-12
      MAP_CONSISTENT
      EXTRAPOLATION ASPC        
      EXTRAPOLATION_ORDER 4
    &END QS
### Property Section ###    
    &PRINT
      &LOWDIN ON
        FILENAME lowdin
        &EACH
          MD 1
        &END EACH
      &END LOWDIN
### CUBE FILES ###
#      &MO_CUBES                 ! Controls which MOs are written to cube-files.
#        NHOMO 1
#        NLUMO 1
#        &EACH MD 1
#        &END EACH
#      &END MO_CUBES
#      &TOT_DENSITY_CUBE ON
#        &EACH MD 1
#        &END EACH
#      &END TOT_DENSITY_CUBE
#      &E_DENSITY_CUBE
#        &EACH MD 1
#        &END EACH
#      &END E_DENSITY_CUBE
##################
      &PDOS
         APPEND                     ! Controls which MOs are included in the pdos-files.
         NLUMO -1
         COMPONENTS .FALSE.
         FILENAME dosfile
         LOG_PRINT_KEY TRUE
      &END PDOS
    &END PRINT
### ############### ###

    &SCF                     
      SCF_GUESS RESTART
      EPS_LUMOS  0.000001    # for MO_CUBES
      MAX_ITER_LUMOS 10000   # for MO_CUBES
      EPS_SCF 1.0E-6         # convergence threshold for total energy
      CHOLESKY INVERSE_DBCSR

### STANDARD DIAGONALIZATION with SMEARING
     MAX_SCF 1 
     ADDED_MOS  200 
     &SMEAR  ON 
         METHOD FERMI_DIRAC 
         ELECTRONIC_TEMPERATURE [K] 300 
     &END SMEAR 
     &DIAGONALIZATION 
          ALGORITHM STANDARD 
     &END DIAGONALIZATION 
     &MIXING 
          METHOD BROYDEN_MIXING 
          ALPHA   0.1 
          BETA    1.5 
          NBROYDEN  8 
     &END MIXING
      # Parameters controlling the outer SCF loop
     &OUTER_SCF
     # Start again if not converged
     # Must be smaller than the one in inner loop, default 1.0E-5
          EPS_SCF 1.0E-6
          MAX_SCF 1
     &END OUTER_SCF

### END OF ST DIAG #######################
#
     &PRINT
        &RESTART LOW
          BACKUP_COPIES 0
        &END RESTART
        &RESTART_HISTORY OFF
        &END RESTART_HISTORY
      &END PRINT
    &END SCF

    &XC
      &XC_GRID
        XC_DERIV SPLINE2
        XC_SMOOTH_RHO NONE 
      &END XC_GRID
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3(BJ)
          CALCULATE_C9_TERM .TRUE.
          REFERENCE_C9_TERM .TRUE.
          LONG_RANGE_CORRECTION .TRUE.
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_FUNCTIONAL PBE
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC

  &END DFT

  &SUBSYS
    &PRINT
      &CELL ON
      &END
    &END
    &CELL
      PERIODIC NONE
      ABC ${CELLSIZE}
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME ${COORD_FILE}  
      &CENTER_COORDINATES T
      &END
    &END TOPOLOGY
    &KIND S
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND Au
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q11
     &END KIND
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND

    &KIND Pt
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q18
    &END KIND
    &KIND Y
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q11
    &END KIND
    &KIND Zr
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q12
    &END KIND
    &KIND Nb
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q13
    &END KIND
    &KIND Mo
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q14
    &END KIND
    &KIND Tc
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q15
    &END KIND
    &KIND Fe
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q16
    &END KIND
    &KIND Co
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q17
    &END KIND
    &KIND Ni
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q18
    &END KIND
    &KIND Cu
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q11
    &END KIND
    &KIND Zn
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q12
    &END KIND


  &END SUBSYS

&END FORCE_EVAL
###################################################
&MOTION
  &GEO_OPT
    TYPE MINIMIZATION
    MAX_ITER 3
    MAX_FORCE 4.5E-4  #9.75E-5
    RMS_FORCE 3.0E-4  #5.0E-5
    OPTIMIZER BFGS
#  OPTIMIZER CG
#  &CG
#    MAX_STEEP_STEPS  0
#    RESTART_LIMIT 9.0E-01
#  &END CG
  &END GEO_OPT

&END MOTION

