############ General ############################
@SET COORD_FILE n9_cut1_s50.xyz 
@SET SYSTEM gopt
@SET LIBDIR . 
@SET MDSTEPNUMBER 100


&GLOBAL
  RUN_TYPE GEO_OPT           # ENERGY_FORCE, GEO_OPT
  PREFERRED_FFT_LIBRARY FFTSG
  EXTENDED_FFT_LENGTHS
  PRINT_LEVEL LOW            
  PROJECT ${SYSTEM}          # Name of calculation 
&END GLOBAL

##################################################
 
&FORCE_EVAL
  METHOD QuickStep
  &PRINT
    &FORCES
      FILENAME forces
      &EACH 
       MD 1
      &END EACH
    &END FORCES
  &END PRINT
  &DFT                      
    BASIS_SET_FILE_NAME ${LIBDIR}/BASIS_SET
    POTENTIAL_FILE_NAME ${LIBDIR}/POTENTIAL

    UKS
#    CHARGE 0

    &MGRID
      CUTOFF 550             # plane-wave cutoff for the charge density [Rydbergs]
      NGRIDS 5
      REL_CUTOFF 60
    &END MGRID  
#    &POISSON
#      PERIODIC XY
#      POISSON_SOLVER PERIODIC
#    &END POISSON
    &QS
      METHOD GPW                        
      EPS_DEFAULT 1.0E-12
      MAP_CONSISTENT
      EXTRAPOLATION ASPC        
      EXTRAPOLATION_ORDER 4
    &END QS
### Property Section ###    
    &PRINT
      &LOWDIN ON
        FILENAME lowdin
        &EACH
          MD 1
        &END EACH
      &END LOWDIN
### CUBE FILES ###
#      &MO_CUBES                 ! Controls which MOs are written to cube-files.
#        NHOMO 1
#        NLUMO 1
#        &EACH MD 1
#        &END EACH
#      &END MO_CUBES
#      &TOT_DENSITY_CUBE ON
#        &EACH MD 1
#        &END EACH
#      &END TOT_DENSITY_CUBE
#      &E_DENSITY_CUBE
#        &EACH MD 1
#        &END EACH
#      &END E_DENSITY_CUBE
##################
      &PDOS
         APPEND                     ! Controls which MOs are included in the pdos-files.
         NLUMO -1
         COMPONENTS .FALSE.
         FILENAME dosfile
         LOG_PRINT_KEY TRUE
      &END PDOS
    &END PRINT
### ############### ###

    &SCF                     
      SCF_GUESS RESTART
      EPS_LUMOS  0.000001    # for MO_CUBES
      MAX_ITER_LUMOS 10000   # for MO_CUBES
      EPS_SCF 1.0E-6         # convergence threshold for total energy
      CHOLESKY INVERSE_DBCSR

### OT METHOD ###

#      MAX_SCF 20
#      &OT ON
#        MINIMIZER DIIS
#        PRECONDITIONER FULL_ALL # FULL_SINGLE_INVERSE
#        #ENERGY_GAP 0.1
#        ALGORITHM IRAC
#      &END OT    
#      &OUTER_SCF ON
#        EPS_SCF 1.0E-6
#        MAX_SCF 100
#      &END
#
### STANDARD DIAGONALIZATION with SMEARING
     MAX_SCF 2000 
     ADDED_MOS  500 
     &SMEAR  ON 
         METHOD FERMI_DIRAC 
         ELECTRONIC_TEMPERATURE [K] 250 
     &END SMEAR 
     &DIAGONALIZATION 
          ALGORITHM STANDARD 
     &END DIAGONALIZATION 
     &MIXING 
          METHOD BROYDEN_MIXING 
          ALPHA   0.1 
          BETA    1.5 
          NBROYDEN  8 
     &END MIXING
### END OF ST DIAG #######################
#
     &PRINT
        &RESTART ON
          BACKUP_COPIES 0
          COMMON_ITERATION_LEVELS 1
          &EACH 
            MD 1
          &END EACH
          ADD_LAST NUMERIC
        &END RESTART
        &RESTART_HISTORY OFF
        &END RESTART_HISTORY
      &END PRINT
    &END SCF

    &XC
      &XC_GRID
        XC_DERIV SPLINE2
        XC_SMOOTH_RHO NONE 
      &END XC_GRID
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3(BJ)
          CALCULATE_C9_TERM .TRUE.
          REFERENCE_C9_TERM .TRUE.
          LONG_RANGE_CORRECTION .TRUE.
          PARAMETER_FILE_NAME ${LIBDIR}/dftd3.dat
          REFERENCE_FUNCTIONAL PBE
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC

  &END DFT

  &SUBSYS
    &PRINT
      &CELL ON
      &END
    &END
    &CELL
      PERIODIC NONE
      ABC 30.18 29.04 11.13
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME ${COORD_FILE}  
      &CENTER_COORDINATES T
      &END
    &END TOPOLOGY
    &KIND Mo
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q14
    &END KIND
    &KIND S
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND Co
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q17
    &END KIND
    &KIND Ni
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q18
    &END KIND
    &KIND Cu
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q19
    &END KIND
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
  &END SUBSYS

&END FORCE_EVAL
###################################################
&MOTION
 &GEO_OPT
  TYPE MINIMIZATION
  MAX_ITER 240
  OPTIMIZER BFGS
#  OPTIMIZER CG
#  &CG
#    MAX_STEEP_STEPS  0
#    RESTART_LIMIT 9.0E-01
#  &END CG
 &END GEO_OPT

  &MD
    &REFTRAJ
      FIRST_SNAPSHOT 1
      EVAL_ENERGY_FORCES
      TRAJ_FILE_NAME ${COORD_FILE}  
    &END REFTRAJ
    ENSEMBLE REFTRAJ
    STEPS ${MDSTEPNUMBER}
  &END MD

#  &PRINT
#    &FORCES OFF
#    &END
#    &RESTART ON
#    &END RESTART
#  &END PRINT

&END MOTION

